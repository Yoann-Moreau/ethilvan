{% extends 'base_admin.html.twig' %}

{% block title %}Ajouter un jeu Steam{% endblock %}

{% block javascripts %}
	<script type="module" src="/assets/js/steam_new.js"></script>
{% endblock %}

{% block body %}

	<h1>Ajouter un jeu Steam</h1>

	<div class="col-50">
		<div class="btns-container">
			<div class="back">
				<a class="btn" href="{{ path('app_game_index') }}">Retour Ã  la liste des jeux</a>
			</div>
		</div>

		{% for message in app.flashes('error') %}
			<div class="error">
				{{ message }}
			</div>
		{% endfor %}

		{{ form_start(form) }}

		<div class="input-container">
			{{ form_label(form.name) }}
			{{ form_widget(form.name) }}
		</div>

		<div class="input-container">
			{{ form_label(form.app_id) }}
			{{ form_widget(form.app_id) }}
		</div>

		<div class="btns right">
			<button type="submit">Ajouter le jeu Steam</button>
		</div>

		{{ form_end(form) }}
	</div>
{% endblock %}
