<div class="pagination">

	{% for p in pages %}

		{% if p > page + 2 %}
			<div class="separator">...</div>
		{% endif %}

		<a class="page {% if p is same as page %}current{% endif %}"
				{% if id is not defined %}
					href="{{ path(path, {'sort_by': sort_by, 'page': p, 'search': search}) }}"
				{% else %}
					href="{{ path(path, {'id': id, 'sort_by': sort_by, 'page': p, 'search': search}) }}"
				{% endif %}
		>{{ p }}</a>

		{% if p < page - 2 %}
			<div class="separator">...</div>
		{% endif %}

	{% endfor %}

</div>
