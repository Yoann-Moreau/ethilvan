{% extends 'base_member.html.twig' %}

{% block title %}Edition de profil{% endblock %}

{% block body %}
	<h1>Edition de profil</h1>

	<div class="btns-container">
		<div class="btns">
			<a class="btn" href="{{ path('app_member_profile') }}">
				<i class="fa-solid fa-arrow-left"></i>
				<span>Retour au profil</span>
			</a>
			<a class="btn" href="{{ path('app_member_change_email') }}">
				<i class="fa-solid fa-at"></i>
				<span>Changer mon adresse email</span>
			</a>
			<a class="btn" href="{{ path('app_member_change_password') }}">
				<i class="fa-solid fa-key"></i>
				<span>Changer mon mot de passe</span>
			</a>
		</div>
	</div>

	<ul class="successes">
		{% for message in app.flashes('success') %}
			<li class="success">{{ message }}</li>
		{% endfor %}
	</ul>

	<ul class="errors">
		{% for error in errors %}
			<li class="error"><i class="fa-solid fa-triangle-exclamation"></i> {{ error.message }}</li>
		{% endfor %}
	</ul>

	<div class="col-50">
		{{ form_start(form) }}

		<div class="input-container">
			{{ form_label(form.avatar) }}
			{{ form_widget(form.avatar) }}
		</div>

		<div class="input-container">
			{{ form_label(form.favoriteGames) }}
			{{ form_widget(form.favoriteGames) }}
		</div>

		{{ form_widget(form._token) }}

		<div class="btns right">
			<button type="submit" class="btn">
				<i class="fa-solid fa-floppy-disk"></i>
				<span>Sauvegarder</span>
			</button>
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}
