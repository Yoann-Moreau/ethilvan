{% extends 'base_admin.html.twig' %}

{% block title %}Liste des textes{% endblock %}

{% block body %}
	<h1>Liste des textes</h1>

	<div class="btns-container">
		<div class="btns">
			<a class="btn" href="{{ path('app_text_new') }}">
				<i class="fa-solid fa-plus"></i>
				<span>Ajouter un texte</span>
			</a>
		</div>
	</div>

	<div class="table texts">

		<div class="head">
			<div class="col col-65">Texte</div>
			<div class="col col-10">Page</div>
			<div class="col col-25">Actions</div>
		</div>

		{% for text in texts %}
			<div class="row">
				<div class="col col-65">
					<a href="{{ path('app_text_edit', {'id': text.id}) }}">{{ text.title }}</a>
				</div>
				<div class="col col-10">{{ text.page }}</div>
				<div class="col col-25 btns">
					<a class="btn" href="{{ path('app_text_edit', {'id': text.id}) }}">
						<i class="fa-solid fa-pen"></i>
						<span>Editer</span>
					</a>
					{{ include('admin_text/_delete_form.html.twig') }}
				</div>
			</div>
		{% else %}
			<div class="row">
				Aucun texte trouv√©
			</div>
		{% endfor %}
	</div>
{% endblock %}
