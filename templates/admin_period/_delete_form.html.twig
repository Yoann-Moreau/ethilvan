<form method="post" action="{{ path('app_admin_period_delete', {'id': period.id}) }}"
      onsubmit="return confirm('Êtes-vous sûr(e) de vouloir supprimer cette période ?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ period.id) }}">
	<button class="btn delete">
		<i class="fa-solid fa-trash"></i>
		<span>Supprimer</span>
	</button>
</form>
