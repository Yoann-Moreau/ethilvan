{% extends 'base_admin.html.twig' %}

{% block title %}Edition de période{% endblock %}

{% block body %}
	<h1>Edition de période</h1>

	<div class="col-50">
		<div class="btns-container">
			<div class="btns">
				<a class="btn" href="{{ path('app_admin_period_index') }}">
					<i class="fa-solid fa-arrow-left"></i>
					<span>Retour à la liste des périodes</span>
				</a>
			</div>
			<div class="btns right">
				{{ include('admin_period/_delete_form.html.twig') }}
			</div>
		</div>

		<ul class="errors">
			{% for error in form_errors %}
				<li class="error"><i class="fa-solid fa-triangle-exclamation"></i> {{ error.message }}</li>
			{% endfor %}
			{% for error in errors %}
				<li class="error"><i class="fa-solid fa-triangle-exclamation"></i> {{ error }}</li>
			{% endfor %}
		</ul>

		{{ include('admin_period/_form.html.twig', {'button_label': 'Mettre à jour la période'}) }}
	</div>
{% endblock %}
