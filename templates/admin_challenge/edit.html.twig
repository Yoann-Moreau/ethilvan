{% extends 'base_admin.html.twig' %}

{% block title %}Edition de défi{% endblock %}

{% block body %}
	<h1>Edition de défi</h1>

	<div class="col-50">
		<div class="btns-container">
			<div class="btns">
				<a class="btn" href="{{ path('app_admin_challenge_index') }}">
					<i class="fa-solid fa-arrow-left"></i>
					<span>Retour à la liste des défis</span>
				</a>
			</div>
			<div class="btns right">
				{% set event = false %}
				{% for period in challenge.periods %}
					{% if period.type == 'event' %}
						{% set event = true %}
					{% endif %}
				{% endfor %}
				{% if challenge.yearChallenge is null and event %}
					<a class="btn" href="{{ path('app_admin_challenge_add_to_year', {id: challenge.id}) }}">
						<i class="fa-solid fa-right-long"></i>
						<span>Ajouter à l'année</span>
					</a>
				{% endif %}
				{{ include('admin_challenge/_delete_form.html.twig') }}
			</div>
		</div>

		{{ include('admin_challenge/_form.html.twig', {'button_label': 'Mettre à jour le défi'}) }}
	</div>

{% endblock %}
