{% extends 'base_admin.html.twig' %}

{% block title %}Challenge index{% endblock %}

{% block body %}
	<h1>Challenge index</h1>

	<table class="table">
		<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Description</th>
			<th>Number_of_players</th>
			<th>actions</th>
		</tr>
		</thead>
		<tbody>
		{% for challenge in challenges %}
			<tr>
				<td>{{ challenge.id }}</td>
				<td>{{ challenge.name }}</td>
				<td>{{ challenge.description }}</td>
				<td>{{ challenge.numberOfPlayers }}</td>
				<td>
					<a href="{{ path('app_admin_challenge_show', {'id': challenge.id}) }}">show</a>
					<a href="{{ path('app_admin_challenge_edit', {'id': challenge.id}) }}">edit</a>
				</td>
			</tr>
		{% else %}
			<tr>
				<td colspan="5">no records found</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_admin_challenge_new') }}">Create new</a>
{% endblock %}
