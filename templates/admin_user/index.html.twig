{% extends 'base_admin.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
	<h1>Liste des utilisateurs</h1>

	<div class="table users">

		<div class="head">
			<div class="col col-35">Utilisateur</div>
			<div class="col col-35">RÃ´les</div>
			<div class="col col-30">Actions</div>
		</div>

		{% for user in users %}
			<div class="row">
				<div class="col col-35">{{ user.username }}</div>
				<div class="col col-35">
					{% for role in user.roles %}
						{% if role == 'ROLE_EV' %}Ethil-Vannien{% endif %}
						{% if role == 'ROLE_ADMIN' %}Admin{% endif %}
						{% if role == 'ROLE_SUPER_ADMIN' %}Super-Admin{% endif %}
					{% endfor %}
				</div>
				<div class="col col-30 btns">
					<a class="btn" href="{{ path('app_admin_user_edit', {'id': user.id}) }}">
						<i class="fa-solid fa-pen"></i>
						<span>Editer</span>
					</a>
					{{ include('admin_user/_delete_form.html.twig') }}
				</div>
			</div>
		{% endfor %}

	</div>

{% endblock %}
