{% extends 'base.html.twig' %}

{% block title %}Mentions l√©gales{% endblock %}

{% block body %}

	<section class="legals">

		{% for text in texts %}

			{% if text.title is not empty %}
				{% if loop.index|first %}
					<h1>{{ text.title }}</h1>
				{% else %}
					<h2>{{ text.title }}</h2>
				{% endif %}
			{% endif %}

			{% if text.text is not empty %}
				<p>{{ text.text|nl2br }}</p>
			{% endif %}

		{% endfor %}
	</section>

{% endblock %}
